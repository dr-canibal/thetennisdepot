 */
?>
<?php $_product = $this->getProduct() ?>

<?php echo $this->getPriceHtml($_product) ?>

<?php $_associatedProducts = $this->getAllowProducts() ?>
    <?php if (count($_associatedProducts)): ?>
    <h4>Availability</h4>
        <?php foreach ($_associatedProducts as $_item): ?>
          <p class="availability"><strong>
          <?php
          $color            = $_item->getAttributeText('color');
          $grip_size        = $_item->getAttributeText('grip_size');
		  $shoe_size        = $_item->getAttributeText('shoe_size');
          $apparel_size     = $_item->getAttributeText('apparel_size');
          
          if ($color != '')
            echo $color;
          elseif ($apparel_size != '')
            echo $apparel_size;
			elseif ($shoe_size != '')
            echo $shoe_size;

          elseif ($grip_size != '')
            echo $grip_size;

          ?>: </strong>
    <?php 
    $stockLevel = (int) Mage::getModel('cataloginventory/stock_item')->loadByProduct($_item)->getQty();
    if ($stockLevel > 20)
      echo $this->__('20+');
    else
      echo $stockLevel; 
    ?>
          </p>
        <?php endforeach; ?>
    <?php endif; ?> 
