<?xml version="1.0" encoding="UTF-8"?>
<layout version="0.1.0">

    <expresscheckout_index_index translate="label">
        <label>Easy Checkout</label>
        <remove name="left"/>
        <remove name="right"/>
        <reference name="root">
            <action method="setTemplate"><template>page/1column.phtml</template></action>
        </reference>
        <reference name="head">
            <action method="addItem" ifconfig="expresscheckout/general/enabled"><type>skin_css</type><name>css/expresscheckout.css</name></action>
        </reference>
        <reference name="content">
            <block type="expresscheckout/checkout" name="expresscheckout" template="expresscheckout/checkout.phtml">
                <block type="customer/form_login" name="customer.login" template="expresscheckout/login.phtml"/>
                <block type="customer/account_forgotpassword" name="customer.forgot" template="expresscheckout/forgotpassword.phtml"/>

                <block type="expresscheckout/checkout_billing" name="checkout.onepage.billing" as="billing.address" template="expresscheckout/checkout/billing.phtml"/>
                <block type="expresscheckout/checkout_shipping" name="checkout.onepage.shipping" as="shipping.address" template="expresscheckout/checkout/shipping.phtml"/>

                <block type="checkout/onepage_shipping_method" name="expresscheckout.checkout.shipping_method" as="shipping.method" template="expresscheckout/checkout/shipping_method.phtml">
                    <block type="checkout/onepage_shipping_method_available" name="expresscheckout.checkout.shipping_method.available" as="available" template="expresscheckout/checkout/shipping_method/available.phtml"/>
                    <block type="checkout/onepage_shipping_method_additional" name="expresscheckout.checkout.shipping_method.additional" as="additional" template="expresscheckout/checkout/shipping_method/additional.phtml"/>
                </block>

                <block type="checkout/onepage_payment" name="checkout.onepage.payment" as="payment.method" template="expresscheckout/checkout/payment.phtml">
                    <block type="checkout/onepage_payment_methods" name="checkout.payment.methods" as="methods" template="expresscheckout/checkout/payment/methods.phtml">
										
                    <action method="setMethodFormTemplate"><method>purchaseorder</method><template>payment/form/purchaseorder.phtml</template></action>
						
						
					<action method="setMethodFormTemplate"><method>authorizenet</method><template>paygate/form/cc.phtml</template></action>
					<action method="setMethodFormTemplate"><method>verisign</method><template>expresscheckout/checkout/payment/form/cc.phtml</template></action>
					<action method="setMethodFormTemplate"><method>paypaluk_direct</method><template>expresscheckout/checkout/payment/form/cc.phtml</template></action>
					<action method="setMethodFormTemplate"><method>paypal_direct</method><template>expresscheckout/checkout/payment/form/cc.phtml</template></action>
					<action method="setMethodFormTemplate"><method>protxDirect</method><template>expresscheckout/checkout/payment/form/cc.phtml</template></action>

					<action method="setMethodFormTemplate"><method>cc</method><template>expresscheckout/checkout/payment/form/cc.phtml</template></action>
                    <action method="setMethodFormTemplate"><method>ccsave</method><template>expresscheckout/checkout/payment/form/ccsave.phtml</template></action>
					<action method="setMethodFormTemplate"><method>checkmo</method><template>expresscheckout/checkout/payment/form/checkmo.phtml</template></action>
					
                    </block>
                </block>

                <block type="checkout/onepage_review" name="checkout.onepage.review" as="review" template="expresscheckout/checkout/review.phtml">
                    <block type="expresscheckout/agreements" name="checkout.onepage.agreements" as="agreements" template="expresscheckout/checkout/agreements.phtml"/>
                    <block type="checkout/onepage_review_info" name="info" template="checkout/onepage/review/info.phtml">
                        <action method="addItemRender"><type>default</type><block>checkout/cart_item_renderer</block><template>checkout/onepage/review/item.phtml</template></action>
                        <action method="addItemRender"><type>grouped</type><block>checkout/cart_item_renderer_grouped</block><template>checkout/onepage/review/item.phtml</template></action>
                        <action method="addItemRender"><type>configurable</type><block>checkout/cart_item_renderer_configurable</block><template>checkout/onepage/review/item.phtml</template></action>
                        <block type="checkout/cart_totals" name="checkout.onepage.review.info.totals" as="totals" template="checkout/onepage/review/totals.phtml"/>
                        <block type="core/text_list" name="checkout.onepage.review.info.items.before" as="items_before"/>
                    </block>
                </block>
            </block>
        </reference>
    </expresscheckout_index_index>

    <checkout_cart_index>
        <!--<reference name="checkout.cart.top_methods">
            <action method="unsetChild" ifconfig="expresscheckout/general/enabled"><name>checkout.cart.methods.onepage</name></action>
        </reference>
        <reference name="checkout.cart.methods">
            <action method="unsetChild" ifconfig="expresscheckout/general/enabled"><name>checkout.cart.methods.onepage</name></action>
        </reference>
        <reference name="checkout.cart.top_methods">
            <block type="expresscheckout/checkout_link" name="checkout.cart.methods.express" template="expresscheckout/checkout/link.phtml"/>
        </reference>
        <reference name="checkout.cart.methods">
            <block type="expresscheckout/checkout_link" name="checkout.cart.methods.express" template="expresscheckout/checkout/link.phtml" before="checkout.cart.methods.multishipping"/>
        </reference>-->
    </checkout_cart_index>

    <expresscheckout_index_updatecheckout>
        <remove name="right"/>
        <remove name="left"/>
        <block type="checkout/onepage_payment_methods" name="checkout.payment.method" template="expresscheckout/checkout/payment/methods.phtml">
            <action method="setMethodFormTemplate"><method>purchaseorder</method><template>payment/form/purchaseorder.phtml</template></action>
			<action method="setMethodFormTemplate"><method>authorizenet</method><template>paygate/form/cc.phtml</template></action>
			<action method="setMethodFormTemplate"><method>verisign</method><template>expresscheckout/checkout/payment/form/cc.phtml</template></action>
			<action method="setMethodFormTemplate"><method>paypaluk_direct</method><template>expresscheckout/checkout/payment/form/cc.phtml</template></action>
			<action method="setMethodFormTemplate"><method>paypal_direct</method><template>expresscheckout/checkout/payment/form/cc.phtml</template></action>
			<action method="setMethodFormTemplate"><method>protxDirect</method><template>expresscheckout/checkout/payment/form/cc.phtml</template></action>

			<action method="setMethodFormTemplate"><method>cc</method><template>expresscheckout/checkout/payment/form/cc.phtml</template></action>
			<action method="setMethodFormTemplate"><method>ccsave</method><template>expresscheckout/checkout/payment/form/ccsave.phtml</template></action>
			<action method="setMethodFormTemplate"><method>checkmo</method><template>expresscheckout/checkout/payment/form/checkmo.phtml</template></action>
        </block>
        <block type="checkout/onepage_shipping_method_available" name="checkout.shipping.method" template="checkout/onepage/shipping_method/available.phtml"/>
        <block type="checkout/onepage_review_info" name="checkout.review" template="checkout/onepage/review/info.phtml">
            <action method="addItemRender"><type>default</type><block>checkout/cart_item_renderer</block><template>checkout/onepage/review/item.phtml</template></action>
            <action method="addItemRender"><type>grouped</type><block>checkout/cart_item_renderer_grouped</block><template>checkout/onepage/review/item.phtml</template></action>
            <action method="addItemRender"><type>configurable</type><block>checkout/cart_item_renderer_configurable</block><template>checkout/onepage/review/item.phtml</template></action>
            <block type="checkout/cart_totals" name="checkout.onepage.review.info.totals" as="totals" template="checkout/onepage/review/totals.phtml"/>
            <block type="core/text_list" name="checkout.onepage.review.info.items.before" as="items_before"/>
        </block>
    </expresscheckout_index_updatecheckout>

    <expresscheckout_index_success translate="label">
        <reference name="root">
            <action method="setTemplate"><template>page/2columns-right.phtml</template></action>
        </reference>
        <reference name="content">
            <block type="checkout/onepage_success" name="checkout.success" template="checkout/success.phtml"/>
        </reference>
    </expresscheckout_index_success>

    <expresscheckout_index_failure translate="label">
        <reference name="root">
            <action method="setTemplate"><template>page/2columns-right.phtml</template></action>
        </reference>
        <reference name="content">
            <block type="checkout/onepage_failure" name="checkout.failure" template="checkout/onepage/failure.phtml"/>
        </reference>
    </expresscheckout_index_failure>
</layout>