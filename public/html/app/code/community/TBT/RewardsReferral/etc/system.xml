<config>
   <sections>
        <rewards translate="label" module="rewardsref">
            <groups>
                <referral translate="label">
                    <label>Referral Program</label>
                    <sort_order>70</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <referral_show translate="label">
                            <label>Show referral link</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>75</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment><![CDATA[Show refer a friend link in user account.]]></comment>
                        </referral_show>
                        <subscription_email_template translate="label">
                            <label>Select email template (Referral subscribe)</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_email_template</source_model>
                            <sort_order>78</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </subscription_email_template>
                        <confirmation_email_template translate="label">
                            <label><![CDATA[Select email template (Referral confirm)]]></label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_email_template</source_model>
                            <sort_order>79</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </confirmation_email_template> 
                    </fields>
                </referral>
                <transferComments>
                    <fields>
                        <referralSignup translate="label comment">
                            <label><![CDATA[Points earned because a referral signed up]]></label>
                            <frontend_type>text</frontend_type>
                            <sort_order>130</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </referralSignup>
                        <referralFirstOrder translate="label comment">
                            <label><![CDATA[Points earned because a referral made his/her first order]]></label>
                            <frontend_type>text</frontend_type>
                            <sort_order>140</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </referralFirstOrder>
                        <referralOrder translate="label comment">
                            <label><![CDATA[Points earned as a percentage of a referral's order]]></label>
                            <frontend_type>text</frontend_type>
                            <sort_order>150</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </referralOrder>
                    </fields>
                </transferComments>
            </groups>
        </rewards>
    </sections>
</config>
