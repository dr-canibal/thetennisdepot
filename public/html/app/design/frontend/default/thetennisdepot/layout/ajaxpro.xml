<?xml version="1.0"?>
<layout version="0.1.0">
    <!-- AjaxPro -->
    <default>

        <reference name="head">
            <action method="addItem" ifconfig="ajax_pro/general/enabled"><type>skin_css</type><name>css/ajaxpro.css</name></action>
        	<action method="addItem" ifconfig="ajax_pro/general/enabled"><type>skin_css</type><name>css/ajaxproie6.css</name><params/><if>lt IE 7</if></action>
            <action method="addItem" ifconfig="ajax_pro/general/enabled"><type>skin_js</type><name>js/ajaxpro.js</name></action>
            <block type="core/template" name="ajaxpro_config" template="ajaxpro/config.phtml"/>
	</reference>

	<reference name="before_body_end">
            <block type="core/template" name="ajaxpro_notice_message" template="ajaxpro/noticeForm.phtml"/>
            <block type="core/template" name="ajaxpro_add_to_cart_message" template="ajaxpro/addToCartForm.phtml"/>
            <block type="core/template" name="ajaxpro_add_to_compare_message" template="ajaxpro/addToCompareForm.phtml"/>
            <block type="core/template" name="ajaxpro_add_to_wishlist_message" template="ajaxpro/addToWishlistForm.phtml"/>
        </reference>
        
    </default>

    <checkout_cart_index>
        <reference name="head">
            <action method="removeItem" ifconfig="ajax_pro/general/disabledOnShoppingCartPage"><type>skin_js</type><name>js/ajaxpro.js</name></action>
	</reference>
    </checkout_cart_index>
</layout>
