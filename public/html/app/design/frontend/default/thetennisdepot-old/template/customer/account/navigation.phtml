<ul id="nav-account" >
  <li class="level0"><a href="#" class="rounded {transparent}"><span><?php echo $this->__('My Account'); ?></span></a>
    <ul class="level0">
                <?php $_links = $this->getLinks(); ?>
                <?php $_index = 1; ?>
                <?php $_count = count($_links); ?>
                <?php foreach ($_links as $_link): ?>
                    <?php $_last = ($_index++ >= $_count); ?>
                    <?php if ($this->isActive($_link)): ?>
                        <li class="level1 on<?php echo ($_last ? ' last' : '') ?>"><a href="#" class="rounded {transparent}"><span><?php echo $_link->getLabel() ?></span></a></li>
                    <?php else: ?>
                        <li class="level1<?php echo ($_last ? ' last' : '') ?>"><a href="<?php echo $_link->getUrl() ?>" class="rounded {transparent}"><span><?php echo $_link->getLabel() ?></span></a></li>
                    <?php endif; ?>
                <?php endforeach; ?>
    </ul>
  </li>
</ul>
