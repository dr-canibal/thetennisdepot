<config>
    <tabs>
        <morningtime translate="label" module="core">
            <label>Morningtime</label>
            <sort_order>100</sort_order>
        </morningtime>
    </tabs>
    <sections>
        <latestreviews translate="label" module="latestreviews">
            <label>Latest Reviews</label>
            <tab>morningtime</tab>
            <frontend_type>text</frontend_type>
            <sort_order>90</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <general translate="label">
                    <label>General</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <num_displayed_reviews translate="label">
                            <label>Number of items to show</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </num_displayed_reviews>
                        <sort_by translate="label">
                            <label>Sort listing by</label>
                            <frontend_type>select</frontend_type>
                            <source_model>latestreviews/config_source_sortFields</source_model>
                            <sort_order>15</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </sort_by>
                     </fields>
                </general>
                <reviews translate="label">
                    <label>Reviews Listing</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>20</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <show_fields translate="label">
                            <label>Show fields</label>
                            <frontend_type>multiselect</frontend_type>
                            <source_model>latestreviews/config_source_showFields</source_model>
                            <sort_order>15</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </show_fields>
                        <show_title translate="label">
                            <label>Show title from</label>
                            <frontend_type>select</frontend_type>
                            <source_model>latestreviews/config_source_titleType</source_model>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </show_title>
                        <link_to translate="label">
                            <label>Link title to</label>
                            <frontend_type>select</frontend_type>
                            <source_model>latestreviews/config_source_linkType</source_model>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </link_to>
                    </fields>
                </reviews>
                <products translate="label">
                    <label>Product Listing</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>30</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <listing_type translate="label">
                            <label>Listing type</label>
                            <frontend_type>select</frontend_type>
                            <source_model>latestreviews/config_source_listingType</source_model>
                            <sort_order>15</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </listing_type>
                    </fields>
                </products>
            </groups>
        </latestreviews>
    </sections>
</config>