<layout version="0.1.0">
    <default>
    </default>
    <raffle_index_index>
    	<reference name="root">
            <reference name="head">
            	<action method="addCss"><stylesheet>css/raffle.css</stylesheet></action>
            </reference>
        </reference>
        <reference name="content">
            <block type="raffle/raffle" name="raffle" template="raffle/raffle.phtml">
	            <block type="raffle/form" name="raffle_form" as="raffle_form" template="raffle/form.phtml">
		            <action method="setCampaign"><name>static</name></action>
		            <action method="setRedirect"><name>/</name></action>
	            </block>
	        </block>
        </reference>
    </raffle_index_index>
</layout> 