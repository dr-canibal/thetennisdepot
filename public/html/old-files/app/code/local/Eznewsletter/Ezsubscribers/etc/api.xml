<?xml version="1.0"?>
<config>
    <api>
        <resources>

            <ezeditor translate="title" module="ezsubscribers">
            <title>Title Of My Resource</title>
            <acl>eznewsletter</acl>
            <model>ezsubscribers/ezeditor_api</model>
            <methods>
                <getTest translate="title" module="ezsubscribers">
                    <title>Test method.</title>
                    <acl>eznewsletter</acl>
                </getTest>
                <getCategoryLayout translate="title" module="ezsubscribers">
                    <title>Returns category layout.</title>
                    <acl>eznewsletter</acl>
                </getCategoryLayout>
                <getCatalog translate="title" module="ezsubscribers">
                    <title>Returns the product catalog.</title>
                    <acl>eznewsletter</acl>
                </getCatalog>
            </methods>
            </ezeditor>

            <ezsignups translate="title" module="ezsubscribers">
            <title>Title Of My Resource</title>
            <acl>eznewsletter</acl>
            <model>ezsubscribers/ezsignups_api</model>
            <methods>
                <getAllSignups translate="title" module="ezsubscribers">
                    <title>Get all subscribers.</title>
                    <acl>eznewsletter</acl>
                </getAllSignups>
                <unsubscribe translate="title" module="ezsubscribers">
                    <title>Unsubscribe a subscriber</title>
                    <acl>eznewsletter</acl>
                </unsubscribe>
            </methods>
            </ezsignups>

            <ezorders translate="title" module="ezsubscribers">
            <title>Title Of My Resource</title>
            <acl>eznewsletter</acl>
            <model>ezsubscribers/ezorders_api</model>
            <methods>
                <getAllOrders translate="title" module="ezsubscribers">
                    <title>Get all orders.</title>
                    <acl>eznewsletter</acl>
                </getAllOrders>
            </methods>
            </ezorders>

