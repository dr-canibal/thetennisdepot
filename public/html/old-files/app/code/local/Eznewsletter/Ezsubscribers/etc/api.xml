                    <title>Get the version of ez.newsletter extension installed.</title>
                    <acl>eznewsletter</acl>
                </getVersion>
                <getServerDateTime translate="title" module="ezsubscribers">
                    <title>Get the date and time set on the client server.</title>
                    <acl>eznewsletter</acl>
                </getServerDateTime>
                <getDateShifted translate="title" module="ezsubscribers">
                    <title>Get the last run dated shifted into client timezone.</title>
                    <acl>eznewsletter</acl>
                </getDateShifted>
                <getTimeZone translate="title" module="ezsubscribers">
                    <title>Get the TimeZone.</title>
                    <acl>eznewsletter</acl>
                </getTimeZone>
                <getGMTOffset translate="title" module="ezsubscribers">
                    <title>Get the GMT Offset.</title>
                    <acl>eznewsletter</acl>
                </getGMTOffset>
