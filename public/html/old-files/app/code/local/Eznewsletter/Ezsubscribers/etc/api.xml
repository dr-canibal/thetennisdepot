                    <title>Get all store ids by website code.</title>
                    <acl>eznewsletter</acl>
                </getStoreIdsByWebsiteCode>
                <getStoreIdsByStoreName translate="title" module="ezsubscribers">
                    <title>Get all store ids by store name.</title>
                    <acl>eznewsletter</acl>
                </getStoreIdsByStoreName>
                <getStoreIdsByStoreViewCode translate="title" module="ezsubscribers">
                    <title>Get all store ids by store view code.</title>
                    <acl>eznewsletter</acl>
                </getStoreIdsByStoreViewCode>
                <getEntityIdByEntityModel translate="title" module="ezsubscribers">
                    <title>Get the entity id for order status.</title>
                    <acl>eznewsletter</acl>
                </getEntityIdByEntityModel>
                <getOrderStatuses translate="title" module="ezsubscribers">
                    <title>Get all the available order statuses.</title>
                    <acl>eznewsletter</acl>
                </getOrderStatuses>
            </methods>
            </ezutilities>
        </resources>

        <acl>
            <resources>
                <eznewsletter translate="title" module="ezsubscribers">
                    <title>ez.newsletter Magento Customer Management Module</title>
                    <sort_order>20</sort_order>
                </eznewsletter>
            </resources>
        </acl>
    </api>
</config>