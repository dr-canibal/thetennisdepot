            <title>Title Of My Resource</title>
            <acl>eznewsletter</acl>
            <model>ezsubscribers/ezutilities_api</model>
            <methods>
                <getMinOrderDate translate="title" module="ezsubscribers">
                  <title>Gets the minimum date from the orders table.</title>
                  <acl>eznewsletter</acl>
                </getMinOrderDate>
                <createCategory translate="title" module="ezsubscribers">
                    <title>Creates a category.</title>
                    <acl>eznewsletter</acl>
