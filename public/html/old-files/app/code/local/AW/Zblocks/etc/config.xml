    <global>
        <models>
            <zblocks>
                <class>AW_Zblocks_Model</class>
                <resourceModel>zblocks_mysql4</resourceModel>
            </zblocks>
            <zblocks_mysql4>
                <class>AW_Zblocks_Model_Mysql4</class>
                <entities>
                    <zblocks>
                        <table>zblocks</table>
                    </zblocks>
                </entities>
            </zblocks_mysql4>
        </models>
        <resources>
            <zblocks_setup>
                <setup>
                    <module>AW_Zblocks</module>
                </setup>
                <connection>
